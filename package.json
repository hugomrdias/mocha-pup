{
  "name": "mocha-pup",
  "description": "Run mocha tests in Chrome, using webpack and puppeteer.",
  "version": "0.1.0",
  "main": "cjs/index.js",
  "bin": {
    "mocha-pup": "cjs/cli.js"
  },
  "scripts": {
    "clean": "rimraf ./cjs",
    "prebuild": "yarn clean",
    "build": "ts-build ./src --cjs",
    "test": "mocha -r @ts-tools/node \"./test/**/*.spec.ts\" --watch-extensions ts --timeout 20000",
    "prepack": "yarn build"
  },
  "peerDependencies": {
    "mocha": ">=4",
    "webpack": ">=4"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "commander": "^2.19.0",
    "create-listening-server": "^0.1.1",
    "express": "^4.16.4",
    "glob": "^7.1.3",
    "html-webpack-plugin": "^4.0.0-beta.4",
    "puppeteer": "^1.11.0",
    "webpack-dev-middleware": "^3.4.0"
  },
  "devDependencies": {
    "@ts-tools/build": "^0.1.1",
    "@ts-tools/node": "^0.7.3",
    "@ts-tools/webpack-loader": "^0.7.3",
    "@types/chai": "^4.1.7",
    "@types/express": "^4.16.0",
    "@types/glob": "^7.1.1",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "8",
    "@types/puppeteer": "^1.10.1",
    "@types/webpack-dev-middleware": "^2.0.2",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "typescript": "~3.2.1",
    "webpack": "^4.26.1"
  },
  "files": [
    "cjs",
    "src",
    "static"
  ],
  "license": "MIT"
}

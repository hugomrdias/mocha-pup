{
  "name": "mocha-pup",
  "description": "Run mocha tests in Chrome, using webpack and puppeteer.",
  "version": "0.1.17",
  "main": "cjs/index.js",
  "bin": {
    "mocha-pup": "cjs/cli.js"
  },
  "scripts": {
    "clean": "rimraf ./cjs",
    "prebuild": "yarn clean",
    "build": "tsc -p src",
    "pretest": "yarn lint && yarn typecheck",
    "test": "mocha -r @ts-tools/node/r \"./test/**/*.spec.ts\" --watch-extensions ts --timeout 50000",
    "lint": "tslint -p ./tsconfig.base.json",
    "typecheck": "tsc -p src --noEmit && tsc -p test --noEmit",
    "prepack": "yarn build"
  },
  "peerDependencies": {
    "mocha": ">=4",
    "webpack": ">=4"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^3.0.0",
    "create-listening-server": "^0.1.2",
    "css-loader": "^3.2.0",
    "express": "^4.17.1",
    "find-up": "^4.1.0",
    "glob": "^7.1.4",
    "html-webpack-plugin": "^4.0.0-beta.8",
    "promise-assist": "^1.2.6",
    "puppeteer": "^1.19.0",
    "style-loader": "^1.0.0",
    "webpack-dev-middleware": "^3.7.0"
  },
  "devDependencies": {
    "@ts-tools/node": "^0.9.10",
    "@ts-tools/webpack-loader": "^0.8.14",
    "@types/chai": "^4.2.0",
    "@types/express": "^4.17.0",
    "@types/glob": "^7.1.1",
    "@types/html-minifier": "^3.5.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "8",
    "@types/puppeteer": "^1.19.0",
    "@types/webpack": "^4.32.1",
    "@types/webpack-dev-middleware": "^2.0.3",
    "chai": "^4.2.0",
    "mocha": "^6.2.0",
    "rimraf": "^2.6.3",
    "tslint": "^5.18.0",
    "typescript": "~3.5.3",
    "webpack": "^4.39.1"
  },
  "files": [
    "cjs",
    "src",
    "!src/tsconfig.json",
    "static"
  ],
  "license": "MIT",
  "repository": "git@github.com:wixplosives/mocha-pup.git"
}

{
  "name": "mocha-pup",
  "description": "Run mocha tests in Chrome, using webpack and puppeteer.",
  "version": "0.1.8",
  "main": "cjs/index.js",
  "bin": {
    "mocha-pup": "cjs/cli.js"
  },
  "scripts": {
    "clean": "rimraf ./cjs",
    "prebuild": "yarn clean",
    "build": "ts-build ./src --cjs",
    "test": "mocha -r @ts-tools/node/r \"./test/**/*.spec.ts\" --watch-extensions ts --timeout 50000",
    "prepack": "yarn build"
  },
  "peerDependencies": {
    "mocha": ">=4",
    "webpack": ">=4"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^2.19.0",
    "create-listening-server": "^0.1.2",
    "css-loader": "^2.1.0",
    "express": "^4.16.4",
    "glob": "^7.1.3",
    "html-webpack-plugin": "^4.0.0-beta.5",
    "promise-assist": "^1.2.3",
    "puppeteer": "^1.12.2",
    "style-loader": "^0.23.1",
    "webpack-dev-middleware": "^3.5.2"
  },
  "devDependencies": {
    "@ts-tools/build": "^0.1.10",
    "@ts-tools/node": "^0.9.3",
    "@ts-tools/webpack-loader": "^0.8.7",
    "@types/chai": "^4.1.7",
    "@types/express": "^4.16.1",
    "@types/glob": "^7.1.1",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/mocha": "^5.2.6",
    "@types/node": "8",
    "@types/puppeteer": "^1.12.1",
    "@types/webpack": "^4.4.24",
    "@types/webpack-dev-middleware": "^2.0.2",
    "chai": "^4.2.0",
    "mocha": "^6.0.0",
    "rimraf": "^2.6.3",
    "tslint": "^5.12.1",
    "typescript": "~3.3.3",
    "webpack": "^4.29.5"
  },
  "files": [
    "cjs",
    "src",
    "static"
  ],
  "license": "MIT",
  "repository": "git@github.com:wixplosives/mocha-pup.git"
}
